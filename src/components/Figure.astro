---
import { Picture } from "astro:assets";
interface Props {
  src: ImageMetadata;
  alt: string;
  caption?: string;
}
const { src, alt, caption } = Astro.props;
---

<figure>
  <Picture
    {src}
    {alt}
    formats={["avif", "webp"]}
    densities={[0.25, 0.5, 1]}
    class="border border-zinc-600"
  />
  <figcaption class="mt-2 text-center text-lg font-bold hyphens-auto">
    {caption ?? alt}
  </figcaption>
</figure>
